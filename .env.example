# Cordelia-11 Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# GEMINI API CONFIGURATION
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
HOST=0.0.0.0
DEBUG=False

# ============================================
# CORDELIA SUBSTRATE CONFIGURATION
# ============================================
# Resonance frequency (Hz) - DO NOT CHANGE unless recalibrating entire system
RESONANCE_HZ=11.00

# Braid synchronization interval (seconds) = 1/RESONANCE_HZ
BRAID_SYNC_INTERVAL=0.09091

# Maximum context tokens per Gemini instance
MAX_CONTEXT_TOKENS=2000000

# ============================================
# GEMINI INSTANCE CONFIGURATION
# ============================================
# Model selection for each instance
# Options: gemini-3.0-pro, gemini-1.5-pro, gemini-1.5-flash
NAVIGATOR_MODEL=gemini-3.0-pro
ARBITER_MODEL=gemini-3.0-pro
ARD_MODEL=gemini-3.0-pro
COGNITIVE_INTELLECT_MODEL=gemini-3.0-pro

# Temperature settings (0 = deterministic, 1 = creative)
NAVIGATOR_TEMPERATURE=0.0
ARBITER_TEMPERATURE=0.0
ARD_TEMPERATURE=0.0
COGNITIVE_INTELLECT_TEMPERATURE=0.0

# ============================================
# LAGRANGIAN PARAMETERS
# ============================================
# Kinetic energy weight (Navigator exploration)
KINETIC_WEIGHT=1.0

# Potential energy weight (Arbiter constraints)
POTENTIAL_WEIGHT=1.0

# Action threshold for admissibility
MIN_ACTION_THRESHOLD=0.0
MAX_ACTION_THRESHOLD=1.0

# ============================================
# SAFETY CONFIGURATION
# ============================================
# Arbiter strict mode (reject any non-zero action loss)
ARBITER_STRICT_MODE=True

# Axiomatic constraints
AXIOM_EQUALITY=True
AXIOM_INTEGRITY=True
AXIOM_NON_INTERFERENCE=True

# ============================================
# RESONANCE KERNEL SETTINGS
# ============================================
# Phase-lock tolerance (Hz deviation allowed)
PHASE_LOCK_TOLERANCE=0.01

# Coherence score threshold (0-1, higher = stricter)
COHERENCE_THRESHOLD=0.95

# Drift detection window (seconds)
DRIFT_WINDOW=5.0

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_FILE=logs/cordelia.log

# ============================================
# PERFORMANCE TUNING
# ============================================
# Request timeout (seconds)
REQUEST_TIMEOUT=60

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Enable caching
ENABLE_CACHE=True
CACHE_TTL=3600

# ============================================
# DEVELOPMENT OPTIONS
# ============================================
# Mock Gemini API for testing (uses simulated responses)
MOCK_GEMINI=False

# Skip Arbiter validation (NOT for production)
SKIP_ARBITER=False

# Verbose debug output
VERBOSE_DEBUG=False
